  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@preact/preset-vite": "^2.9.3",
    "@storybook/addon-themes": "^9.0.14",
    "@storybook/preact-vite": "^9.0.14",
    "storybook": "^9.0.14",
    "typescript": "^5.8.3",
    "vite": "catalog:",
    "eslint-plugin-storybook": "9.0.14",
    "@storybook/addon-vitest": "9.0.14"

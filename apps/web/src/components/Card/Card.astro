---
import H3 from '@components/H3/H3.svelte'
import Text from '@components/Text/Text.svelte'

const {
    title = "Card Title",
    date = "current",
    description = "Card Description",
} = Astro.props;
---

<div
    class="relative w-full text-left px-[30px] flex flex-col pt-6 pb-8 gap-y-2 border-l border-blue ws-card last-of-type:border-0">
    <div class="absolute w-3 h-3 top-0 left-[-7px] border-[3px] bg-white border-blue rounded-full" />
    <H3 variant="tertiary" style="position: absolute; top: -8px;">{title}</H3>
    <p class="text-gray text-sm font-medium">{date}</p>
    <Text variant="primary" style="">{description}</Text>
</div>
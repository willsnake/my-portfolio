---
import H2 from '@components/H2/H2.svelte'
import Card from '@components/Card/Card.astro'
import jobs from './jobs.json'

---

<section
    class="w-full px-6 md:px-0 py-20 bg-dark-white flex flex-col content-center justify-center items-center text-center">
    <H2 variant="secondary" style="margin-bottom: 40px;">Education & Experience</H2>
    {jobs.map(({ title, date, description }) => (
    <Card title={title} date={date} description={description} />
    ))}
</section>
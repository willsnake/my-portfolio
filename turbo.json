{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*",
        "!test/**/*",
        "!e2e/**/*",
        "!performance/**/*",
        "!.astro/**/*",
        "!.cache/**/*",
        "!mod.js",
        "!mod.js.map"
      ],
      "outputs": ["dist/**/*", "!vendor/**", "mod.js", "mod.js.map"],
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
